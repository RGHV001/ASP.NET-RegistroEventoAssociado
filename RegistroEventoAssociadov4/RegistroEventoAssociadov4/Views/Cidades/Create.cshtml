@model RegistroEventoAssociadov4.Models.Cidade

<h2>Criar Cidade</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Nome" class="control-label"></label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DDD" class="control-label"></label>
        <input asp-for="DDD" class="form-control" />
        <span asp-validation-for="DDD" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="EstadoId" class="control-label"></label>
        <select asp-for="EstadoId" class="form-control" asp-items="ViewBag.EstadoId"></select>
        <span asp-validation-for="EstadoId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Salvar</button>
    <a asp-action="Index" class="btn btn-secondary">Voltar</a>
</form>
