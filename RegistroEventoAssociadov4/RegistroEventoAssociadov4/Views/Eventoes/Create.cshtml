@model RegistroEventoAssociadov4.Models.Evento

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Evento</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Nome -->
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" placeholder="Digite o nome do evento" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>

            <!-- Descrição -->
            <div class="form-group">
                <label asp-for="Descricao" class="control-label"></label>
                <textarea asp-for="Descricao" class="form-control" rows="3" placeholder="Descrição do evento"></textarea>
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>

            <!-- Espaço Locável -->
            <div class="form-group">
                <label asp-for="EspacoLocavelId" class="control-label"></label>
                <select asp-for="EspacoLocavelId" class="form-control" asp-items="ViewBag.EspacoLocavelId">
                    <option value="" disabled selected>Selecione um espaço locável</option>
                </select>
                <span asp-validation-for="EspacoLocavelId" class="text-danger"></span>
            </div>

            <!-- Data e Hora de Início -->
            <div class="form-group">
                <label asp-for="DataInicio" class="control-label"></label>
                <input asp-for="DataInicio" type="date" class="form-control" />
                <span asp-validation-for="DataInicio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HoraInicio" class="control-label"></label>
                <input asp-for="HoraInicio" type="time" class="form-control" />
                <span asp-validation-for="HoraInicio" class="text-danger"></span>
            </div>

            <!-- Data e Hora de Fim -->
            <div class="form-group">
                <label asp-for="DataFim" class="control-label"></label>
                <input asp-for="DataFim" type="date" class="form-control" />
                <span asp-validation-for="DataFim" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HoraFim" class="control-label"></label>
                <input asp-for="HoraFim" type="time" class="form-control" />
                <span asp-validation-for="HoraFim" class="text-danger"></span>
            </div>

            <!-- Responsável -->
            <div class="form-group">
                <label asp-for="ResponsavelId" class="control-label"></label>
                <select asp-for="ResponsavelId" class="form-control" asp-items="ViewBag.ResponsavelId">
                    <option value="" disabled selected>Selecione o responsável</option>
                </select>
                <span asp-validation-for="ResponsavelId" class="text-danger"></span>
            </div>

            <!-- Valor de Locação -->
            <div class="form-group">
                <label asp-for="ValorLocacao" class="control-label"></label>
                <input asp-for="ValorLocacao" type="number" step="0.01" class="form-control" placeholder="Digite o valor da locação" />
                <span asp-validation-for="ValorLocacao" class="text-danger"></span>
            </div>

            <!-- Botão de Enviar -->
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar à Lista</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
